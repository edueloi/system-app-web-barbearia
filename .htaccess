# ====== NOTA DE SERVIÇO ======
# /nota ou /nota.php vão para pages/agenda/nota.php
RewriteRule ^nota$ pages/agenda/nota.php [L]
RewriteRule ^nota\.php$ pages/agenda/nota.php [L]
# Redireciona /agenda/nota.php para /nota (URL amigável)
RewriteCond %{THE_REQUEST} \s/agenda/nota\.php[?\s] [NC]
RewriteRule ^agenda/nota\.php$ /nota [R=301,L]
RewriteEngine On
RewriteBase /

# Não listar arquivos da pasta (segurança)
Options -Indexes

# Bloqueia acesso direto à pasta "pages" pela URL (opcional, mas bom pra segurança)
# Se alguém digitar salao.develoi.com/pages/agenda/agenda.php, redireciona para a URL bonita
RewriteCond %{THE_REQUEST} \s/pages/([^/]+)/([^.]+)\.php [NC]
RewriteRule ^ /%1 [R=301,L]

# --- ROTAS AMIGÁVEIS ---

# Rota: /dashboard -> abre pages/dashboard.php (ou onde ele estiver)
# OBS: Verifiquei que na sua print não vi dashboard.php na raiz, assumo que esteja em pages
RewriteRule ^dashboard$ pages/dashboard.php [L]

# Rota: /agenda -> abre pages/agenda/agenda.php
RewriteRule ^agenda$ pages/agenda/agenda.php [L]

# Rota: /clientes -> abre pages/clientes/clientes.php
RewriteRule ^clientes$ pages/clientes/clientes.php [L]

# Rota: /recorrencias -> abre pages/clientes/recorrencias.php (com query string preservada)
RewriteRule ^recorrencias$ pages/clientes/recorrencias.php [L,QSA]

# Rota: /servicos -> abre pages/servicos/servicos.php
RewriteRule ^servicos$ pages/servicos/servicos.php [L]

# Rota: /estoque -> abre pages/produtos-estoque/produtos-estoque.php
RewriteRule ^estoque$ pages/produtos-estoque/produtos-estoque.php [L]
# Rota: /produtos-estoque -> abre pages/produtos-estoque/produtos-estoque.php
RewriteRule ^produtos-estoque$ pages/produtos-estoque/produtos-estoque.php [L]

# Rota: /comandas -> abre pages/comandas/comandas.php
RewriteRule ^comandas$ pages/comandas/comandas.php [L]

# Rota: /perfil -> abre pages/perfil/perfil.php
RewriteRule ^perfil$ pages/perfil/perfil.php [L]

# Rota: /calcular-servico -> abre pages/calcular-servico/calcular-servico.php
RewriteRule ^calcular-servico$ pages/calcular-servico/calcular-servico.php [L]

# Rota: /horarios -> abre pages/horarios/horarios.php
RewriteRule ^horarios$ pages/horarios/horarios.php [L]

# Rota: /configuracoes -> abre pages/configuracoes/configuracoes.php
RewriteRule ^configuracoes$ pages/configuracoes/configuracoes.php [L]

# Esconde .php de arquivos na RAIZ (ex: login.php, cadastro.php)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([a-z0-9-_]+)$ $1.php [NC,L]